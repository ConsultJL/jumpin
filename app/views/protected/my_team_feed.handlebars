<body>
{{> navbar }}
<br><br>
<!-- content push wrapper -->
<div class="st-pusher" id="content">

    <!-- sidebar effects INSIDE of st-pusher: -->
    <!-- st-effect-3, st-effect-6, st-effect-7, st-effect-8, st-effect-14 -->

    <!-- this is the wrapper for the content -->
    <div class="st-content">

        <!-- extra div for emulating position:fixed of the menu -->
        <div class="st-content-inner">

            <div class="container-fluid">

                <div class="page-header">
                    <h1 class="h3 pull-left margin-none">Your Team Feed</h1>
                    <div class="clearfix"></div>
                </div>

                <div class="row" data-toggle="gridalicious" data-gutter="30">
                  {{#each posts}}
                      <div class="panel panel-default">
                          <div class="panel-heading">
                              <h3 class="panel-title"><a href="lesson.html">{{User.firstName}} {{truncateLastName User.lastName}} posted about {{title}}</a></h3>
                          </div>
                          <div class="panel-body">
                              <div class="media media-clearfix-sm">
                                  <div class="media-left">
                                      <a href="lesson.html">
                                          <span class="media-object icon-block bg-default"><img src="{{User.profilePic}}" style="width: 110px; height:110px;" class="media-object"></span>
                                      </a>
                                  </div>
                                  <div class="media-body">
                                    {{{desc}}}
                                  </div><br><br>
                                  <div class="row">
                                      <div class="col-xs-12" style="text-align:center;">
                                          <a href="/view_post?postId={{id}}"><button class="btn btn-success">Join the discussion!</button></a>
                                      </div>
                                  </div>
                              </div>
                          </div>
                      </div>
                  {{/each}}
                </div>

            </div>

        </div>
        <!-- /st-content-inner -->

    </div>
    <!-- /st-content -->

</div>
<!-- /st-pusher -->


<!-- Footer -->
<footer class="footer">
    <strong>JumpInstitute LLC</strong>&copy; Copyright 2016
</footer>
<!-- // Footer -->

