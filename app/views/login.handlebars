<body class="login breakpoint-480">
  <div id="content">
    {{> navbar }}
    <br />
    <div class="container-fluid">
        <div class="lock-container">
            <h1>Account Access</h1>
            <div class="panel panel-default text-center">
                <div class="panel-body">
                    {{#if message}}
                      <div class="alert alert-danger">{{message}}</div>
                    {{/if}}
                    <form action="/login" method="post">
                      <input class="form-control" type="text" name="username" placeholder="Username" autocomplete="off" style="background-image: url(&quot;data:image/png;base64,&quot;); background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; background-repeat: no-repeat;">
                      <input class="form-control" type="password" name="password" placeholder="Enter Password" autocomplete="off" style="background-image: url(&quot;data:image/png;base64,&quot;); background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; background-repeat: no-repeat;">

                      <button type="submit" class="btn btn-primary">Login <i class="fa fa-fw fa-unlock-alt"></i></button>
                    </form>
                    <!--<a href="#" class="forgot-password">Forgot password?</a>-->
                </div>
            </div>
        </div>

    </div>
  </div>
